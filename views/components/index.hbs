{{!-- START LAYOUT --}}

{{!-- GET Navbar --}}

{{!-- GET sliderLayout --}}
{{>navbar}}
{{>sliderLayout}}

<div class="range-wrapper">
    <div class="Mtl-title-h5">글자크기</div>
    <div class="range-slider">
        <input class="range-slider__range" type="range" value="20" min="10" max="30">
        <span class="range-slider__value">0</span>
    </div>
</div>
<div class="Mtl-Grid-Container" id="Mtl-Grid-Container">
    <div class="Mtl-Grid-item Mtl-Grid-sm-12 Mtl-Grid-xs-12">
        <form id="mtlTranslateSubmit" class="Mtl-Box-Wrapper">
            <div class="Mtl-title-h5">내용</div>
            <div style="margin:8px">
                <div class="Mtl-Grid-Container Mtl-Grid-spacing-xs-3">
                    <div class="Mtl-Grid-item Mtl-Grid-xs-12 Mtl-Grid-sm-6">
                        <div class="Mtl-center">
                            <div class="Mtl-Form-Control-root">
                                <label for="rootSourceLanguage" class="Mtl-label-l1">소스 언어</label>
                                <select class="custom-select" name="rootSourceLanguage" id="rootSourceLanguage">
                                    <option value="ko">한국어</option>
                                    <option value="en">영어</option>
                                    <option value="zh-CN">중국어</option>
                                    <option value="ja">일본어</option>
                                    <option value="vi">베트남어</option>
                                    <option value="de">독일어</option>
                                    <option value="es">스페인어</option>
                                    <option value="ru">러시아어</option>
                                    <option value="it">이탈리아어</option>
                                    <option value="fr">프랑스어</option>
                                </select>
                            </div>
                            <button type="button" class="Mtl-icon-button-big" onclick="handleExchangeRootLanguage()">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-repeat"
                                    fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                        d="M2.854 7.146a.5.5 0 0 0-.708 0l-2 2a.5.5 0 1 0 .708.708L2.5 8.207l1.646 1.647a.5.5 0 0 0 .708-.708l-2-2zm13-1a.5.5 0 0 0-.708 0L13.5 7.793l-1.646-1.647a.5.5 0 0 0-.708.708l2 2a.5.5 0 0 0 .708 0l2-2a.5.5 0 0 0 0-.708z" />
                                    <path fill-rule="evenodd"
                                        d="M8 3a4.995 4.995 0 0 0-4.192 2.273.5.5 0 0 1-.837-.546A6 6 0 0 1 14 8a.5.5 0 0 1-1.001 0 5 5 0 0 0-5-5zM2.5 7.5A.5.5 0 0 1 3 8a5 5 0 0 0 9.192 2.727.5.5 0 1 1 .837.546A6 6 0 0 1 2 8a.5.5 0 0 1 .501-.5z" />
                                </svg>
                            </button>
                            <div class="Mtl-Form-Control-root">
                                <label for="rootTargetLanguage" class="Mtl-label-l1">타겟 언어</label>
                                <select class="custom-select" name="rootTargetLanguage" id="rootTargetLanguage"
                                    onchange="rootTargetLanguageChange()">
                                    <option value="ko">한국어</option>
                                    <option value="en">영어</option>
                                    <option value="zh-CN">중국어</option>
                                    <option value="ja">일본어</option>
                                    <option value="vi">베트남어</option>
                                    <option value="de">독일어</option>
                                    <option value="es">스페인어</option>
                                    <option value="ru">러시아어</option>
                                    <option value="it">이탈리아어</option>
                                    <option value="fr">프랑스어</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="Mtl-Grid-item Mtl-Grid-xs-12 Mtl-Grid-sm-6">
                        <div class="Mtl-center">
                            <button type="submit" class="Mtl-button Mtl-Translate-Button">번역하기</button>
                        </div>
                    </div>
                </div>
            </div>
            <textarea class="Mtl-textarea" id="sourceTextarea" value="" maxlength="4000"></textarea>
            <div class="Mtl-Overflow-auto">
                <span class="Mtl-Float-Left Mtl-Text-Many"><span id="MTLtextLen">0</span> / 4000</span>
                <button type="button" class="Mtl-button Mtl-Float-Left Mtl-ClearButton" onclick="sourceTextareaClear()">CLEAR</button>
                <button type="button" class="Mtl-button Mtl-Float-Right Mtl-CopyButton" onclick="handleCopyToClipboard('textArea-sourceCopy',event)">COPY</button>
            </div>
        </form>
    </div>
    <div class="Mtl-Grid-Container" id="Mtl-Target-Translator-field">

    </div>
    <div class="Mtl-Grid-item Mtl-Grid-sm-12 Mtl-Grid-xs-12">
        <div class="Mtl-Target-Box text-center">
            <button type="button" class="Mtl-icon-button-big" data-toggle="modal" data-target="#exampleModal">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus" fill="currentColor"
                    xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                        d="M8 3.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H4a.5.5 0 0 1 0-1h3.5V4a.5.5 0 0 1 .5-.5z" />
                    <path fill-rule="evenodd" d="M7.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0V8z" />
                </svg>
            </button>
        </div>
    </div>

</div>
<hr/>
{{>updateNote}}
{{>copyright}}



<!-- snackbar -->
<div id="snackbar"></div>

<!-- modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">번역기 추가하기</h5>
                <button type="button" class="Mtl-button close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <div class="p-2 m-2">
                    <button type="button" class="Mtl-button" onclick="handleAddTranslator('google')">구글 번역기</button>
                </div>
                <div class="p-2 m-2">
                    <button type="button" class="Mtl-button" onclick="handleAddTranslator('papago')">파파고 번역기</button>
                </div>
                <div class="p-2 m-2">
                    <button type="button" class="Mtl-button" onclick="handleAddTranslator('amazon')">아마존 번역기</button>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/js/mtl/navbar.js"></script>
    <script src="/js/mtl/slider.js"></script>
    <script src="/js/mtl/translatorHandler.js"></script>
    {{!-- END LAYOUT --}}